@model LongUrl.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col">
        <p class="text-center font-weight-bold">Введите короткую ссылку (short url) для расшифровки</p>
    </div>
</div>

<div class="row">
    <div class="col">
        <form asp-action="Index" asp-controller="Home" asp-antiforgery="true">
            <div class="custom-control custom-radio">
                <input class="custom-control-input" asp-for="InMultiUrl" type="radio" name="InMultiUrl" id="InSingleUrl" value="false" checked/>
                <label class="custom-control-label" for="InSingleUrl">Расшифровка одной ссылки</label>
            </div>
            <div class="custom-control custom-radio">
                <input class="custom-control-input" asp-for="InMultiUrl" type="radio" name="InMultiUrl" id="InMultiUrl" value="true"/>
                <label class="custom-control-label" for="InMultiUrl">Пакетная расшифровка</label>
            </div>
            <div class="space"></div>
            <div id="TextUrlSingle" class="form-group @Html.Raw(Model != null && Model.InMultiUrl ? "hidden" : "")">
                <input class="form-control form-control-sm urlSingle" asp-for="InUrlSingle" type="url"/>
            </div>
            <div id="TextUrlMulti" class="form-group @Html.Raw(Model != null && Model.InMultiUrl ? "" : "hidden")">
                <textarea class="form-control form-control-sm urlMulti" asp-for="InUrlList" rows="5"></textarea>
            </div>
            <div id="checkIsAntivirusCheck" class="custom-control custom-checkbox @Html.Raw(Model != null && Model.InMultiUrl ? "hidden" : "")">
                <input class="custom-control-input" asp-for="InAntivirus" type="checkbox" id="InAntivirus"/>
                <label class="custom-control-label" for="InAntivirus">Антивирусная проверка</label>
            </div>
            <br/>
            <button type="submit" class="btn btn-sm btn-primary">Расшифровка</button>
        </form>
    </div>
</div>

<div id="blockProgress" class="row hidden" style="padding-top: 25px;">
    <div class="col">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
        </div>
    </div>
</div>

<div id="blockResponse" class="row" style="padding-top: 25px;">
    <div class="col">
        <vc:response request="@Model" />
    </div>
</div>

<a class="btn btn-link" data-toggle="collapse" href="#Comments" role="button" aria-expanded="false" aria-controls="Comments" style="padding: 0 0 0.75rem 0">Показать/скрыть комментарии</a>
<div class="collapse" id="Comments">
    <ul class="nav nav-tabs" id="tabComments" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#vk" role="tab" aria-controls="vk" aria-selected="true">Вконтатке</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#fb" role="tab" aria-controls="fb" aria-selected="false">Facebook</a>
        </li>
    </ul>
    <div class="tab-content" id="tabContent">
        <div class="tab-pane fade show active" id="vk" role="tabpanel" aria-labelledby="vk-tab">
            <div id="vk_comments"></div>
            qqqqqqqqqqqqqqqqqqq
            <script type="text/javascript">
                VK.Widgets.Comments("vk_comments", {limit: 10, attach: "*"});
            </script>
        </div>
        <div class="tab-pane fade" id="fb" role="tabpanel" aria-labelledby="fb-tab">
            wwwwwwwwwwwwwwwwwwwwwww
            <div class="fb-comments" data-href="http://longurl.info" data-width="100%" data-numposts="5"></div>
        </div>
    </div>
</div>