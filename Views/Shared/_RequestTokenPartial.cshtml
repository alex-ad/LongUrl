@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<Locale> Locale
@model LongUrl.Models.AccessToken

<strong>@Locale["token_wellcome"]</strong>
<form asp-action="Api" asp-controller="Home" asp-antiforgery="true">
    @if (!string.IsNullOrEmpty(Model?.ResultMessage))
    {
        <div class="alert alert-primary">@Model.ResultMessage</div>
    }
    <div class="form-group form-inline">
        <input type="text" asp-for="Email" class="form-control form-control-sm" />
    </div>
    <button tupe="submit" class="btn btn-success btn-sm">@Locale["token_btn_send"]</button>
</form>
